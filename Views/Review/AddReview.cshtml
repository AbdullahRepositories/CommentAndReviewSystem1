<div class="container">
    <div class="row">
        <div class="col-md-12">
            <div class="section-heading">
                <h2>Review The Post</h2>
            </div>

        </div>

        <div class="col-md-12">
            <div class="contact-form">
                <form id="contact" method="post" asp-controller="review" asp-action="AddReview">
                    <input hidden asp-for="@Model.PostId" />
                    @* <input hidden asp-for="Model" /> *@

                    <div class="row">
                        <div class="col-lg-12">
                            <div class=" align-content-center" style="margin:15px;">
                                <div class="rate">
                                    <input type="radio" id="star5" asp-for="Rating" value="5" />
                                    <label for="star5" title="5">5 stars</label>
                                    <input type="radio" id="star4" asp-for="Rating" value="4" />
                                    <label for="star4" title="4">4 stars</label>
                                    <input type="radio" id="star3" asp-for="Rating" value="3" />
                                    <label for="star3" title="3">3 stars</label>
                                    <input type="radio" id="star2" asp-for="Rating" value="2" />
                                    <label for="star2" title="2">2 stars</label>
                                    <input type="radio" id="star1" asp-for="Rating" value="1" />
                                    <label for="star1" title="1">1 star</label>


                                </div>
                                <span class="text-danger" asp-validation-for="Rating"></span>
                            </div>
                            <fieldset>
                                <textarea asp-for="Description" rows="6" class="form-control" placeholder="Your Review"></textarea>
                                <span class="text-danger" asp-validation-for="Description"></span>
                            </fieldset>

                        </div>
                    </div>


                    <div class="col-md-12">

                        
                    </div>
                    <div class="col-lg-12">
                        <fieldset>
                            <button type="submit" id="contact" class="btn-light">Send </button>
                        </fieldset>
                    </div>
                </form>
            </div>


        </div>

    </div>
</div>


